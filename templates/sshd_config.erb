# File is managed by Puppet

<%- scope.lookupvar('ssh::server::merged_options').sort_by{ |sk, sv| (sk.to_s.downcase.include? "match" )? sk.to_s : '' }.each do |k, v| -%>
<%- if v.is_a?(Hash) -%>
<%= k %>
<%- v.sort.each do |key, value| -%>
    <%- if value.is_a?(Array) -%>
    <%- value.each do |a| -%>
    <%= key %> <%= a %>
    <%- end -%>
    <%- else -%>
    <%= key %> <%= value %>
    <%- end -%>
<%- end -%>
<%- else -%>
<%- if v.is_a?(Array) -%>
<%- v.each do |a| -%>
<%= k %> <%= a %>
<%- end -%>
<%- else -%>
<%= k %> <%= v %>
<%- end -%>
<%- end -%>
<%- end -%>
